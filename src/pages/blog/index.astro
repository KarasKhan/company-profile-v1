---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import '../../styles/global.css';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="id">
	<head>
		<BaseHead title={`Blog & Tips | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-slate-50 text-slate-800">
		<Header />
		<main class="container mx-auto px-4 py-16 min-h-screen">
			<div class="max-w-4xl mx-auto">
				<div class="text-center mb-12">
					<h1 class="text-4xl font-bold text-slate-900 mb-4">Artikel & Tips Teknis</h1>
					<p class="text-slate-600">Panduan praktis seputar pengembangan website dan bisnis digital.</p>
				</div>
				
				<div class="grid gap-6">
					{
						posts.map((post) => (
							<article class="bg-white p-6 rounded-xl shadow-sm border border-slate-200 hover:shadow-md hover:border-blue-300 transition group">
								<a href={`/blog/${post.id}/`} class="flex flex-col md:flex-row gap-6">
									
									<div class="md:w-1/3 shrink-0">
										{/* PERBAIKAN: Langsung panggil heroImage karena dia sudah pasti String */}
										<img 
											width={720} 
											height={360} 
											src={post.data.heroImage || "https://placehold.co/600x400"} 
											alt="" 
											class="w-full h-48 object-cover rounded-lg bg-slate-100"
										/>
									</div>
									
									<div class="flex flex-col justify-center">
										<div class="text-sm text-slate-500 mb-2 font-medium">
											{post.data.pubDate.toLocaleDateString('id-ID', {
												year: 'numeric',
												month: 'long',
												day: 'numeric',
											})}
										</div>
										<h2 class="text-2xl font-bold text-slate-900 group-hover:text-blue-600 transition mb-3">
											{post.data.title}
										</h2>
										<p class="text-slate-600 line-clamp-2">
											{post.data.description}
										</p>
										<span class="text-blue-600 font-bold mt-4 text-sm group-hover:underline">
											Baca Selengkapnya â†’
										</span>
									</div>
								</a>
							</article>
						))
					}
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>